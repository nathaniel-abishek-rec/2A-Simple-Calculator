<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="end"
            android:paddingTop="40dp"
            android:paddingRight="10dp"
            android:text=""
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="end"
            android:paddingEnd="25dp"
            android:text="0"
            android:textSize="35sp" />

        <Button
            android:id="@+id/back"
            android:onClick="onBackClick"
            android:drawableEnd="@drawable/baseline_backspace_24"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="50dp"
            android:background="#FBFFFF" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:id="@+id/button_11"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="("
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_12"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text=")"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_13"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="%"
            android:backgroundTint="@color/white"
            android:textColor="#FFA500"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_14"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="/"
            android:backgroundTint="@color/white"
            android:textColor="#FFA500"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/button_21"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_22"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_23"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_24"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="*"
            android:backgroundTint="@color/white"
            android:textColor="#FFA500"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/button_31"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_32"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_33"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_34"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="-"
            android:backgroundTint="@color/white"
            android:textColor="#FFA500"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/button_41"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_42"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_43"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_44"
            android:onClick="onOperatorClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="+"
            android:backgroundTint="@color/white"
            android:textColor="#FFA500"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_51"
            android:onClick="onAllClearClick"
            android:backgroundTint="#Ff0000"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="AC"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_52"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_53"
            android:onClick="onDigitClick"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="30sp">
        </Button>
        <Button
            android:id="@+id/button_54"
            android:onClick="onEqualClick"
            android:backgroundTint="#06c258"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_columnSpan="1"
            android:layout_columnWeight="0"
            android:text="="
            android:textSize="30sp">
        </Button>

    </GridLayout>

</RelativeLayout>